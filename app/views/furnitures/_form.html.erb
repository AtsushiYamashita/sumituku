<%= form_with(model: furniture, local: true) do |form| %>
  <% if furniture.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(furniture.errors.count, "error") %> prohibited this furniture from being saved:</h2>

      <ul>
      <% furniture.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.label :name,"名前" %>
    <%= form.text_field :name, id: :furniture_name, :class => "form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :category,"カテゴリー" %>
    <%= form.select :category, [["テーブル", "table"], ["イス", "chair"],["ソファー","sofa"],["ベッド","bed"]], :class => "form-control" %>
    <%#= form.select :category, {"テーブル" => "table", "イス" => "chair","ソファー"=>"sofa",　"ベッド"=>"bed"} %>
    <%#= form.text_field :category, id: :furniture_category %>
  </div>

  <div class="field form-group">
    <%= form.label :furniture_image,"画像" %>
    <%= form.file_field :furniture_image, id: :furniture_furniture_image , :class => "form-control"%>
  </div>

  <div class="actions">
    <%= form.submit "作成する",:class=>"btn btn-primary"%>
  </div>
