<% if notice != nil %>
	<p id="notice"><%= notice %></p>
<% end %>

<nav class="navbar navbar-toggleable-md navbar-light bg-faded">
	<h1 class="logo"><%= link_to 'SUMITUKU', furnitures_path %></h1>
	<a class="category_title" href="#"><%= @furniture.category %></a>
	<button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
		<i class="fa fa-search" aria-hidden="true"></i>
	</button>
  <div class="collapse navbar-collapse search_block" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
    </ul>
    <%= form_tag furnitures_path, :method => 'get' do %>
	  <div class="input-group">
	  	<%= text_field_tag :search, params[:search], class: 'form-control font-awesome', placeholder: "\uF002",id: "inlineFormInputGroup" %>
	  	<%= submit_tag "検索",class: 'input-group-addon search_button' %>
	  </div>
	<% end %>
  </div>
</nav>

<section id="furnitura_detail_top">
<div class="furniture_top_img">
	<%= image_tag @furniture.furniture_image %>
</div>
<div class="furniture_about_text">
	<h3><%= @furniture.name %></h3>
	<p><%= sanitize(simple_format(@furniture.furniture_about), :tags => %w(p br)) %></p>
	<p>値段：<%= @furniture.price %>円</p>

</div>

<div class="purchase_block">
	<p><i class="fa fa-shopping-cart" aria-hidden="true"></i>カートへ進む ></p>
</div>

</section>
<!-- こだわり -->
<section id="kodawari">
<div class="kodawari_img">
	<%= image_tag @furniture.kodawari_img %>
</div>

<div class="kodawari_text">
	<h3><%= @furniture.kodawari_point %></h3>
	<p><%= sanitize(simple_format(@furniture.kodawari_about), :tags => %w(p br)) %></p>
</div>
</section>

<section id="delivery_size">
	<table class="deliverysize_table table table-responsive">
		<tr>
			<th>サイズ</th>
			<td><%= sanitize(simple_format(@furniture.size), :tags => %w(p br)) %></td>
		</tr>
		<tr>
			<th>配送</th>
			<td><%= sanitize(simple_format(@furniture.delivery), :tags => %w(p br)) %></td>
		</tr>
	</table>
</section>

<div class="purchase_block">
	<p><i class="fa fa-shopping-cart" aria-hidden="true"></i>カートへ進む ></p>
</div>

