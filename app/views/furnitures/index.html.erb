      <div class="furniture_container">
      
      <!-- 最近の人気商品 -->
      <!-- まだ新着順のみ -->
        <section id="recently_popular">
          <h2>人気商品から探す</h2>
          <ul class="recently_popular_blocks">
            <% @furnitures.each do |furniture| %>
            <li class="product_block">
              <div class="furniture_img">
                <%= image_tag furniture.furniture_image %>
              </div>
              <div class="product_text">
                <% user = User.find_by(id: furniture.user_id) %>
                <p>
                  <% if user.prof_img.file.nil? %>
                    <span><%= image_tag 'Gravatar-icon.png' %></span>
                  <% else %>
                    <span><%= image_tag user.prof_img %></span>
                  <% end %>
                  <%= link_to furniture.name, furniture %>
                </p>
                <div class="product_kodawari_block">
                  <p><%= furniture.price %>円</p>
                </div>
              </div>
            </li>
            <% end %>
          </ul>
        </section>

        <!-- モック通りにテーブルカテゴリを表示 -->
        <section id="category_popular">
          <h2>カテゴリから探す</h2>
          <ul class="recently_popular_blocks">
            <% @furnitures.each do |furniture| %>
              <% if furniture.category == "table" %>
                <li class="category_block">
                  <div class="furniture_img">
                    <%= image_tag furniture.furniture_image %>
                  </div>
                    <div class="product_category">
                      <h4><%= link_to furniture.category, furniture %></h4>
                    </div>
                </li>
              <% end %>
            <% end %>
          </ul>
        </section>

        <!-- セール情報を表示 -->
        <section id="sale_block">
          <%= image_tag 'sale_img'%>
          <div class="sale_title">
            <p>オープニングセール実施中！</p>
          </div>
          <div class="sale_content">
            <p>ここにセールや特集などの情報を入れる<br>
              1~2行程度</p>
          </div>
        </section>

        <!-- スタッフのおすすめ商品 -->
        <section id="article">
          <h2>スタッフのおすすめ商品</h2>
          <div class="recently_article_blocks">
                <div class="article_block">
                  <div class="article_img">
                    <p><%= image_tag 'article_thumb' %></p>
                  </div>
                  <div class="article_text">
                    <a href="#">人気のスツール工房に見学に行ってきました！</a>
                    <p>
                      <span><%= image_tag 'Gravatar-icon.png' %>
                        sumitukuスタッフ あずさ</span>
                    </p>
                  </div>
                </div>
          </div>
          <% if false%>
          <div class="recommend_list">
            <%= link_to 'おすすめ一覧＞',articles_path %>
          </div>

          <% end %>
          <div class="recommend_list">
            <a href="#">おすすめ一覧＞</a>
          </div>
        </section>


    
