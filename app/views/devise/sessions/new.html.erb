s<div class="container devise_form">
<h2>ログイン</h2>

<%= render "devise/shared/links" %>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email,:placeholder => 'メールアドレス', class: 'form-control login_mail_form font-awesome' %>
  </div>

  <div class="field">
    <%= f.label :password,"パスワード" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", :placeholder => 'パスワード', class: 'form-control login_mail_form font-awesome' %>
  </div>


  <%# if devise_mapping.rememberable? -%>
    <!-- <div class="field"> -->
      <%#= f.check_box :remember_me %>
      <%#= f.label :remember_me %>
    <!-- </div> -->
  <%# end -%>

    <div class="actions">
    <%= f.submit "ログイン",class: "btn btn-success" %>
  </div>
<% end %>
</div>