<section id="signup">
<div class="container devise_form">
<h2>アカウントを作成</h2>

<%= render "devise/shared/links" %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :username, "名前" %><br />
    <%= f.text_field :username, autofocus: true, :placeholder => '名前', class: 'form-control login_mail_form font-awesome' %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email,:placeholder => 'メールアドレス', class: 'form-control login_mail_form font-awesome' %>
  </div>

  <div class="field">
    <%= f.label :password,"パスワード" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", :placeholder => 'パスワード', class: 'form-control login_mail_form font-awesome' %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation,"パスワード確認" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => 'パスワード確認', class: 'form-control login_mail_form font-awesome' %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up",class: "btn btn-success" %>
  </div>
<% end %>
</div>
</section>